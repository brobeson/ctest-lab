// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CTest Lab: Documentation",
      "icon": { "id": "book" },
      "type": "shell",
      "detail": "Render and serve the user documentation.",
      "command": "bundle",
      "args": ["exec", "jekyll", "serve"],
      "options": {
        "cwd": "${workspaceFolder}/docs"
      },
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "clean",
      "problemMatcher": [],
      "label": "npm: clean",
      "detail": "rm -r out/*"
    }
  ]
}
